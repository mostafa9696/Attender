<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_student_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mostafa.attender.Activity.TakeStudentAttendance"

    >

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/save_edit"
        android:id="@+id/button2"
        android:background="@drawable/buttun_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:onClick="save" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/take_attendance_recyclerView"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
