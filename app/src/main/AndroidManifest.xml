<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mostafa.attender">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".TeacherLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mostafa.attender.MainActivity" />
        </activity>
        <activity
            android:name=".AboutApp"
            android:theme="@style/Theme2" />
        <activity
            android:name=".TeacherFunctions"
            android:theme="@style/Theme2" />
        <activity android:name=".AddStudent" />
        <activity android:name=".UpdateStudent" />
        <activity android:name=".StudentLogin" />
        <activity android:name=".StudentAttendance" />
        <activity android:name=".TakeStudentAttendance"></activity>

        <receiver android:name=".AppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>
        <service
            android:name=".HomeServiceWidget"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>