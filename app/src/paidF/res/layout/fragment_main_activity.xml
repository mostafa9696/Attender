<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mostafa.attender.Activity.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/home_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_name_margin"
        android:textSize="70sp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/app_name_textView"
        android:textStyle="bold"
        android:fontFamily="cursive" />

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="@string/teacher"
        android:layout_gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="@dimen/button_marginTop"
        android:background="@drawable/buttun_selector"
        android:id="@+id/teacherLogin"
        android:onClick="teacgerLogin"
        android:textSize="18sp"
        android:gravity="center"
        android:contentDescription="@string/teacher_login" />

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/buttun_selector"
        android:id="@+id/studentLogin"
        android:onClick="studentLogin"
        android:textSize="18sp"
        android:contentDescription="@string/student_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginAs"
        android:layout_gravity="bottom|center"
        android:textStyle="bold|italic"
        android:textSize="45sp"
        android:layout_marginTop="40dp"
        android:id="@+id/loginAs"
        android:textColor="@color/textColor"
        />

    <ProgressBar
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progresBarID" />

</LinearLayout>
